generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

//Admin model
model Admin {
  id             Int      @id @default(autoincrement())
  fullName       String
  email          String   @unique
  password       String
  image          String
  role           String   // Enum can be added later for strict roles
  isEmailVerified Boolean  @default(false)
  otp            String?
  otpExpires     Int?
  googleId       String?  @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}